generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Polo {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  created_at DateTime @default(now())

  student Student[]

  @@map("polos")
}

model Student {
  enrollment Int    @id
  name       String
  email      String @unique

  polo_id Int
  polo    Polo @relation(fields: [polo_id], references: [id])

  created_at DateTime @default(now())

  @@map("students")
}
