generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Polo {
  id   Int    @id @default(autoincrement())
  name String @unique

  student Student[]

  @@map("polos")
}

model Student {
  enrollment Int    @id
  name       String
  email      String @unique

  polo_id Int
  polo    Polo @relation(fields: [polo_id], references: [id])

  @@map("students")
}
